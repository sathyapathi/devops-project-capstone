pipeline {
    agent any

    options {
        timeout(time: 30, unit: 'MINUTES')  // Pipeline timeout
    }

    environment {
        GIT_REPO = "https://github.com/sathyapathi/devops-project-capstone.git"
        DOCKER_IMAGE = "sathyapathi/capstone-image:1.0"
        DOCKERFILE_NAME = "Dockerfile_capstone"
        DOCKER_AUTH_SCRIPT = "scripts/docker-auth.groovy"  // Path to reusable Docker authentication script
        INVENTORY_SERVERS_TEST = "Server_Inventory_Test.txt"
        ANSIBLE_PLAYBOOK_TEST = "ansible_playbook_configure-test-servers.yml"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "Cloning the repository..."
                    git branch: 'main', url: "${GIT_REPO}"
                }
            }
        }

        stage('Build Package') {
            steps {
                script {
                    echo "Building the Maven package..."
                    timeout(time: 10, unit: 'MINUTES') {
                        sh "mvn clean package -Ddockerfile=${DOCKERFILE_NAME}"
                    }
                }
            }
        }

        stage('Build & Containerize') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh "docker build -t ${DOCKER_IMAGE} -f ${DOCKERFILE_NAME} ."
                }
            }
        }

        stage('Release to DockerHub') {
            steps {
                script {
                    echo "Pushing Docker image to DockerHub..."
                    def dockerAuth = load "${DOCKER_AUTH_SCRIPT}"  // Load reusable script
                    dockerAuth.dockerLogin()  // Authenticate to DockerHub
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Deploy to Test Servers') {
            steps {
                script {
                    echo "Deploying to test servers using Ansible..."
                    timeout(time: 5, unit: 'MINUTES') {
                        def dockerAuth = load "${DOCKER_AUTH_SCRIPT}"  // Load reusable script
                        def creds = dockerAuth.getDockerCredentials() // Fetch credentials dynamically

                        withCredentials([usernamePassword(credentialsId: creds.credentialsId, usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                            sh """
                                export DOCKER_USERNAME="$DOCKER_USERNAME"
                                export DOCKER_PASSWORD="$DOCKER_PASSWORD"
                                ansible-playbook -i ${INVENTORY_SERVERS_TEST} ${ANSIBLE_PLAYBOOK_TEST}
                            """
                        }
                    }
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    echo "Cleaning up unused Docker images..."
                    sh "docker system prune -f"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
